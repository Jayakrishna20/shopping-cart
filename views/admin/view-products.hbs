<section>
    <div class="container">
        <div class="row mt-4 mb-2">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5" id="products-table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px; height: 50px;"></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}"><button class="btn btn-primary">Edit</button></a>
                        <a href="/admin/delete-product/{{this._id}}"><button class="btn btn-danger"
                                onclick="return confirm('Do you want to delete {{this.Name}}')">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#products-table').DataTable();
    });
</script>