<section>
    <div class="container mt-5">        
        <table class="table mt-5" id="products-table">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th>Image</th>                    
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Description}}</td>                    
                    <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px; height: 50px;"></td>                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(document).ready(function () {
        $('#products-table').DataTable();
    });
</script>